  async function addProductToCart(button) {
    let productId = button.id;

    try {     
      const response = await fetch('http://localhost:8080/api/carts/649c534e8feb3949f648266b/products/' + productId, {
        method: 'post'
      });
    } 
    catch(err) {
      console.error(`Error: ${err}`);
    }

  }
</script>