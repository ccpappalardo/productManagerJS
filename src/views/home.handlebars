
<div class="container">
  <div>
    <h1>Bienvenido {{user.role}}</h1>
    <p>{{user.name}}</p>
    <p>{{user.email}}</p>
    <p>{{user.age}}</p>
    <a href="/api/sessions/logout"><button>Salir</button></a>
</div>
{{#if isValid}}
  <table class="table">
    <thead>
        <th>Titulo</th>
        <th>Descripcion</th>
        <th>Precio</th>
        <th>Codigo</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {{#each docs}}
        <tr>
          <td>{{this.title}}</td>
          <td>{{this.description}}</td>
          <td>${{this.price}}</td>
          <td>{{this.code}}</td>            
          <td>
          <a href="products/{{this.id}}">Ver</a> 
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>

<br/>
<div>
{{#if hasPrevPage}}
        <a href={{this.prevLink}}><< Anterior</a>
    {{/if}}
    &nbsp;
    {{this.page}}
    &nbsp;
     {{#if hasNextPage}}
        <a href={{this.nextLink}}>Siguiente >></a>
    {{/if}} 
</div>
{{else}}
<h1>No hay productos para mostrar</h1>
{{/if}}

<script src="/js/index.js"></script>
<script src="/socket.io/socket.io.js"></script>